#--------------------------------------------------------#
#						--FILES--						 #
#--------------------------------------------------------#

NAME	= philo
SRCS	= main.c ./srcs/actions.c ./srcs/time_bs.c ./srcs/misc.c ./srcs/loop.c
HEADER	= ./philo.h
LIBFT	= libft/libft.a

#--------------------------------------------------------#
#				--	SOME OTHER BULLSHIT IDK	--			 #
#--------------------------------------------------------#

OBJS	= ${SRCS:.c=.o}
CFLAGS	= -Wall -Wextra -Werror
CC		= gcc
RM		= rm -rf
SAN		= -fsanitize=address -g3
THREAD	= -pthread

all:	${NAME} ${LIBFT}

${NAME}:	${OBJS} ${HEADER} ${LIBFT} Makefile
	${CC} ${CFLAGS} -fsanitize=address -g3 ${THREAD} ${OBJS} ${LIBFT} -o ${NAME}

%.o : %.c ${HEADER}
	gcc -c $< -o ${<:.c=.o}

${LIBFT}:	libft/Makefile
	$(MAKE) -j 3 -C libft/

#--------------------------------------------------------#
#					--	 MAKE COMMANDS	--			 	 #
#--------------------------------------------------------#

clean:
	${RM} ${OBJS}
	make clean -C libft/

norm: 
	norminette ${SRCS} $(HEADER)

fclean:	clean
	${RM} ${NAME}
	make fclean -C libft/

re: fclean all

sus: 
	@echo "⠀⠀⠀⡯⡯⡾⠝⠘⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⠀⢊⠘⡮⣣⠪⠢⡑⡌"
	@echo "⠀⠀⠀⠟⠝⠈⠀⠀⠀⠡⠀⠠⢈⠠⢐⢠⢂⢔⣐⢄⡂⢔⠀⡁⢉⠸⢨⢑⠕⡌"
	@echo "⠀⠀⡀⠁⠀⠀⠀⡀⢂⠡⠈⡔⣕⢮⣳⢯⣿⣻⣟⣯⣯⢷⣫⣆⡂⠀⠀⢐⠑⡌"
	@echo "⣬⠂⠀⠀⢀⢂⢪⠨⢂⠥⣺⡪⣗⢗⣽⢽⡯⣿⣽⣷⢿⡽⡾⡽⣝⢎⠀⠀⠀⢡"
